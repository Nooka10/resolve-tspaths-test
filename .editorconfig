# EditorConfig is awesome:
# https://EditorConfig.org
# Inspired from react-native repo:
# https://github.com/facebook/react-native/blob/main/.editorconfig

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts,tsx}]
max_line_length = 120
ij_typescript_blacklist_imports = db/src/**, types/src/**

[*.yaml]
indent_style = space
